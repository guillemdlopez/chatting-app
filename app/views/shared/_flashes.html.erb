<% if alert || notice %>
    <div class="alert alert-<%= alert ? 'warning' : 'success'%>  alert-dismissible fade show" role="alert">
    <%= alert || notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    </div>
<% end %>